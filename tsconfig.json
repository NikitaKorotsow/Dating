{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "Node",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "esModuleInterop": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "./dist",
        "incremental": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "types": [
            "node"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}